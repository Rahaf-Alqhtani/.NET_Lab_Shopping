@{
    var Product = (ProductModel) ViewData["Product"]; 


}

<h3>Available</h3>

<table class="table table-hover" align="center">
    <thead>
        <tr>
            <th scope="col">BOOK'S ID</th>
            <th scope="col">BOOK'S NAME</th>
            <th scope="col">BOOK'S PRICE</th>
            <th scope="col">BOOK'S IMAGE</th>
        </tr>
    </thead>
    <tbody>
        <tr style="background-color: @((string)ViewData["Color"])">
            <th>@Product.id</th>
            <td>@Product.name</td>
            <td>$@Product.price</td>
            <td><img src="@Product.Image" width="50" height="50" alt="product image" /></td>
        </tr>
    </tbody>
</table>
<button type="button" class="btn btn-info"><a href="/products">Back</a></button>
